if test ! -e machine; then
    case `./config.guess` in
    alpha-* | alphaev[56]-* | alphaev56-* | alphapca56-* )
	MACHINE=alpha
	;;
    m68k-* )
	MACHINE=bobcat
	;;
    i[3456]86-* )
	MACHINE=i386
	;;
    mips-* | mipsel-* )
	MACHINE=mips
	;;
    sparc-* )
	MACHINE=sparc
	;;
    hppa-* | hppa1.[01]-* | hppa2.?-* )
	MACHINE=spectrum
	;;
    vax-* )
	MACHINE=vax
	;;
    * )
	echo "Unable to determine machine type."
	exit 1
	;;
    esac
    ln -s machines/${MACHINE} machine
fi
for FN in compiler.cbf compiler.pkg compiler.sf make.com; do \
    test -e ${FN} || ln -s machine/${FN} .; \
done
