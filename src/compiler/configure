set -e

MACHINE=
while test $# -gt 0; do
    case "${1}" in
    --enable-native-code=*)
	MACHINE=`echo "${1}" | sed -e 's/--enable-native-code=//'`
	shift
	;;
    --disable-native-code)
	MACHINE=no
	shift
	;;
    *)
	shift
	;;
    esac
done
MACHINE=`./choose-machine.sh "${MACHINE}"`

CMD="rm -f machine"
echo "${CMD}"; eval "${CMD}"

CMD="ln -s machines/${MACHINE} machine"
echo "${CMD}"; eval "${CMD}"

LINKS="compiler.cbf compiler.pkg compiler.sf make.com"
if test "${MACHINE}" = C; then
    LINKS="${LINKS} make.so"
fi

for FN in ${LINKS}; do
    if [ ! -f "${FN}" ]; then
	CMD="ln -s machine/${FN} ."
	echo "${CMD}"; eval "${CMD}"
    fi
done
