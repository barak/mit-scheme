# **** END BOILERPLATE ****

LIARC_BOOT_BUNDLES = compiler cref sf star-parser
LIARC_BUNDLES = $(LIARC_BOOT_BUNDLES) edwin ffi imail sos ssp xml

SUBDIRS = $(INSTALLED_SUBDIRS) 6001 compiler rcs win32 xdoc
