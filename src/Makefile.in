	etc/make-in-subdirs.sh install $(INSTALLED_SUBDIRS)
	$(mkinstalldirs) $(DESTDIR)$(EDDIR)
	$(INSTALL_DATA) $(top_srcdir)/etc/TUTORIAL $(DESTDIR)$(EDDIR)/.

