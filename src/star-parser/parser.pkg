;;;; Parser language: packaging

(global-definitions "../runtime/runtime")

(define-package (runtime *parser)
  (files "shared" "matcher" "parser")
  (parent (runtime))
  (export ()
	  *matcher
	  *parser
	  current-parser-macros
	  define-*matcher-expander
	  define-*matcher-macro
	  define-*parser-expander
	  define-*parser-macro
	  global-parser-macros
	  make-parser-macros
	  parser-macros?
	  set-current-parser-macros!
	  with-current-parser-macros))